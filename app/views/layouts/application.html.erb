<!DOCTYPE html>
<html>
  <head>
    <title>Ernst Rullmann</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render "layouts/favicon" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div class="columns">
    <div class="column is-half container">
      <%= render "layouts/navbar" %>

      <% unless notice.blank? %>
        <p class="notification is-success"><%= notice %></p>
      <% end %>
      <% unless alert.blank? %>
        <p class="notification is-warning"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>


  </div>

  <div class="footer columns">
    <div class="container column is-half">
      &#9400; <%= Time.now.strftime('%Y') %> Ernst Rullmann
      <br/>
      <% if admin_signed_in? %>
        <%= link_to('Logout', destroy_admin_session_path, method: :delete, class: "login-link") %>
      <% else %>
        <%= link_to 'Login', new_admin_session_path, class: "login-link" %>
      <% end %>
    </div>
  </div>
  </body>
</html>
