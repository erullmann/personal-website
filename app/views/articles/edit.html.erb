<div class="columns">
  <div class="column is-three-quarters">
    <h2 class="title is-3">New Article</h2>

    <% if @article.errors.any? %>
      <div class="notification is-danger">
        <h3 class="title is-5"><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h3>

        <div class="content">
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <%= form_with model: @article, class: "form", local: true  do |f| %>
      <div class="level">
        <div class="level-item level-left is-narrow">
          <div class="field">
            <%= f.label :emoji, class: 'label' %>
            <%= f.text_field :emoji, class: "input emoji", maxlength: 1 %>
          </div>
        </div>
        <div class="level-item level-left is-narrow spacer">
          &nbsp;
        </div>
        <div class="level-item level-left">
          <div class="field title-field">
            <%= f.label :title, class: 'label' %>
            <%= f.text_field :title, class: "input" %>
          </div>
        </div>
      </div>
      <div class="field">
        <%= f.label :location, class: 'label' %>
        <%= f.text_field :location, class: "input" %>
      </div>
      <div class="field">
        <%= f.label :source, class: 'label' %>
        <%= f.text_field :source, class: "input" %>
      </div>
      <div class="field">
        <%= f.label :body, class: 'label' %>
        <%= f.text_area :body, size: "60x12", class: "textarea" %>
      </div>
      <div class="field">
        <%= f.label :publish_date, class: 'label' %>
        <div class=" field is-grouped level">
          <%= f.datetime_select :publish_date, {}, {class: "select"} %>
        </div>
      </div>
      <div class="level">
        <div class="level-left">
          <%= f.submit @article.persisted? ? "Update" : "Create", class: "button is-link" %>
          &nbsp;
          <%= link_to "Cancel", root_path, class: "button is-link is-light" %>

        </div>
        <div class="level-right">
          <% if @article.persisted? %>
            <%= link_to('Destroy', article_path(@article), {method: :delete, class: "button is-danger", data: { confirm: "Are you sure you want to delete #{@article.title}?" }}) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
